    "drizzle-orm": "^0.39.0",
    "pg": "^8.11.0",
    "@supabase/supabase-js": "^2.39.0",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0",
    "express-session": "^1.18.0",
    "connect-pg-simple": "^9.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.0",
    "@hookform/resolvers": "^3.3.3",
    "lucide-react": "^0.294.0",
    "class-variance-authority": "^0.7.0",
