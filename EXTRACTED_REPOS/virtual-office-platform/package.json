  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/express-session": "^1.17.10",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.45",
